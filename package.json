{
  "name": "show-tracker",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "functions",
    "apps/*",
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "run:web": "yarn workspace web dev",
    "deploy:all": "yarn deploy:functions && yarn deploy:rules && yarn deploy:web",
    "deploy:functions": "yarn workspace functions deploy",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:web": "yarn workspace web deploy",
    "test": "yarn workspace web test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
